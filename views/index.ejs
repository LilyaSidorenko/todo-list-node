<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link href="style.css" rel="stylesheet">

</head>
<body>

    <div id="login">

        <h1>Login</h1>

        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>


        <!-- LOGIN FORM -->
        <form action="/" method="post" name='form-login'>
            <div class="form-group">
                <span class="fontawesome-user"></span>
                <input type="text" id="user" placeholder="Username" name="email">
            </div>
            <div class="form-group">
                <span class="fontawesome-lock"></span>
                <input type="password" id="pass" placeholder="Password" name="password">
            </div>

            <button type="submit" value="Login">Login</button>
        </form>


        <p>Need an account? <a href="/signup" class="singup">Signup</a></p>
    </div>

</body>
</html>
