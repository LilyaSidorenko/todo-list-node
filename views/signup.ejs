<!doctype html>
<html>
<head>
    <title>Authentication</title>
    <link href="style.css" rel="stylesheet">

</head>
<body>

<div id="login">

    <h1>Singup</h1>

    <% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
    <% } %>


    <!-- LOGIN FORM -->
    <form action="/signup" method="post" name='form-login'>
        <div class="form-group">
            <span class="fontawesome-user"></span>
            <input type="text" id="user" placeholder="Username" name="email">
        </div>
        <div class="form-group">
            <span class="fontawesome-lock"></span>
            <input type="password" id="pass" placeholder="Password" name="password">
        </div>

        <button type="submit" value="Login">Singup</button>
    </form>


    <p>Already have an account? <a href="/" class="singup">Login</a></p>
</div>

</body>
</html>
